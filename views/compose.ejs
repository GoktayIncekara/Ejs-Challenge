<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">

    <div class="form-group">
        <label >Title</label>
        <input class="form-control" type="text" name="composeTitle">
    </div>
    <div class="form-group">
        <label class="mt-2">Post</label>
        <textarea class="form-control" name="postBody" cols="30" rows="5"></textarea>
    </div>

    <button class="btn btn-dark mt-3" type="submit" name="button">Publish</button>
</form>

